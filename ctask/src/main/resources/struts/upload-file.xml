<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
        "http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>
        <package name="upload" namespace="/upload"  extends="json-default">
                <action name="*" method="{1}" class="com.jc.web.upload.FileUploadAction" >
                    <result name="sucess">/WEB-INF/jsp/index.jsp</result>
                    <result name="jsonRes" type="json">
                        <!--表示是否忽略等级，也就是继承关系 默认true-->
                        <param name="ignoreHierarchy">true</param>
                        <!-- 指定是否序列化空的属性 -->
                        <param name="excludeNullProperties">true</param>
                        <param name="contentType">text/html</param>
                        <param name="root">jsonMap</param>
                    </result>
                </action>
        </package>
</struts>